<!DOCTYPE html>
<html>
<head>
  <title>RailsProfile</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <a class="navbar-brand" href="/">Charles Lincoln: Portfolio Website</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to raw('<i class="fas fa-home"></i> Home'), root_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to raw('<i class="fas fa-user"></i> Aboute me'), about_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to raw('<i class="fas fa-briefcase"></i> Portfolio'), portfolio_path, class: 'nav-link' %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-5">
      <i class="fas fa-fire"></i>
      <%= image_tag "bluff.jpg", alt: "Me at the beach", class: "small_img" %>
      <i class="fas fa-fire"></i>
      <%= image_tag "boston.jpg", alt: "Me in Boston with my girlfriend", class: "small_img" %>
      <i class="fas fa-fire"></i>
      <%= image_tag "cherry.jpg", alt: "My cat Cherry", class: "small_img" %>
      <i class="fas fa-fire"></i>
      <%= image_tag "jep.jpg", alt: "My dog Jep", class: "small_img" %>
      <i class="fas fa-fire"></i>
      <%= image_tag "newton.jpg", alt: "My dog Newton", class: "small_img" %>
      <i class="fas fa-fire"></i>
      <%= image_tag "luffy.jpg", alt: "Me with Luffy", class: "small_img" %>
      <i class="fas fa-fire"></i>
      <%= image_tag "eclipse.jpg", alt: "Looking at the eclipse", class: "small_img" %>
      <i class="fas fa-fire"></i>
      <%= image_tag "tree.jpg", alt: "Me in front of a tree", class: "small_img" %>
      <i class="fas fa-fire"></i>
    </div>

    <%= yield %>
</body>
</html>
